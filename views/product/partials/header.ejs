<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Mini Shop</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <style>
    body{font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, sans-serif; margin:0; padding:0 16px 40px;}
    header, footer{display:flex; gap:12px; align-items:center; padding:12px 0;}
    .grid{display:grid; gap:16px; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));}
    .card{border:1px solid #ddd; border-radius:12px; overflow:hidden;}
    .card img{width:100%; height:160px; object-fit:cover;}
    .row{display:flex; gap:10px; align-items:center; flex-wrap:wrap;}
    .btn{padding:8px 12px; border-radius:10px; border:1px solid #333; background:#111; color:#fff; text-decoration:none; display:inline-block}
    .btn.secondary{background:#fff; color:#111;}
    table{border-collapse:collapse; width:100%;}
    th,td{border-bottom:1px solid #eee; padding:8px 6px; text-align:left;}
    form{margin:0;}
    input,select{padding:8px 10px; border:1px solid #ccc; border-radius:8px;}
    .muted{color:#666}
  </style>
</head>
<body>
<header class="row">
  <a href="/" class="btn secondary">Shop</a>
  <a href="/cart" class="btn secondary">Cart</a>
  <a href="/admin/products" class="btn secondary">Admin</a>
</header>
<hr>
