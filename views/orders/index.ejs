<h1>Orders</h1>
<ul>
  <% if (orders.length === 0) { %>
    <li>No orders yet.</li>
  <% } else { %>
    <% orders.forEach(order => { %>
      <li><%= order.id %> - <%= order.status || 'Pending' %></li>
    <% }) %>
  <% } %>
</ul>
